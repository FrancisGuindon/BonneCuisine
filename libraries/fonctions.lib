function getFileExtension($idMenu)
{
    if (file_exists("images/" . $idMenu . ".jpg")) {
        return ".jpg";
    } else if (file_exists("images/" . $idMenu . ".jpeg")) {
        return ".jpeg";
    } else if (file_exists("images/" . $idMenu . ".png")) {
        return ".png";
    } else {
        return false;
    }
}

